<!DOCTYPE html>
<html>

<head>
  <title>WildgaSports</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

  <!--Navbar-->
  <nav class="navbar navbar-light dark light-blue lighten-4">

    <!-- Navbar brand -->
    <%= link_to root_path, class:"navbar-brand" do %>
    <%= image_tag "WILDGA_02.png", style:"width: 30%;" %>
    <% end %>

    <div class="justify-content-end">

      <span class="dropdown mr-3">
        <span style="color: white;" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <i class="fas fa-shopping-cart car"></i>
          <span class="badge badge-pill badge-danger qtd-buy">1</span>
        </span>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <%= link_to "Perfil", "#", class:"dropdown-item" %>
          <div class="dropdown-divider"></div>
          <%= link_to "Perfil", "#", class:"dropdown-item" %>
        </div>
      </span>

      <% unless user_signed_in? || admin_signed_in?%>

      <%= link_to "Entrar", new_user_session_path, class: "texto" %>

      <% else%>

      <% if admin_signed_in? %>
      <%= link_to "Sair", destroy_admin_session_path, method: :delete %>
      <% else%>
      <span class="dropdown">
        <span class="dropdown-toggle" style="color: white;" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%= current_user.email %>
        </span>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <%= link_to "Perfil", "#", class:"dropdown-item" %>
          <%= link_to "Histórico", "#", class:"dropdown-item" %>
          <div class="dropdown-divider"></div>
          <%= link_to "Sair", destroy_user_session_path, class:"dropdown-item", method: :delete %>
        </div>
      </span>
      <% end %>

      <% end %>

      <button class="navbar-toggler toggler-example" type="button" data-toggle="collapse" data-target="#navbarSupportedContent1">
        <span class="btn-menu">
          <i class="fas fa-bars fa-1x"></i>
        </span>
      </button>

    </div>
    <!-- Collapse button -->

    <!-- Collapsible content -->
    <div class="collapse navbar-collapse" id="navbarSupportedContent1">

      <!-- Links -->
      <ul class="navbar-nav mr-auto">
        <li class="nav-item item <%= active("/") %>">
          <%= link_to "Página Inicial", root_path, class: "texto"%>
        </li>
        <li class="nav-item item <%= active("/products") %>">
          <%= link_to "Galeria de Produtos", products_path, class: "texto" %>
        </li>
        <li class="nav-item item <%= active("/contacts/new") %>">
          <%= link_to "Formulário de Contato", new_contact_path, class: "texto" %>
        </li>
        <li class="nav-item item <%= active("/sobre") %>">
          <%= link_to "Sobre", sobre_path, class: "texto" %>
        </li>
      </ul>
      <!-- Links -->

    </div>
    <!-- Collapsible content -->

  </nav>
  <!--/.Navbar-->


  <%= yield %>
  <footer>
    <i class="icones fab fa-facebook-square fa-3x"></i>
    <i class="icones fab fa-instagram fa-3x"></i>
    <i class="icones fab fa-whatsapp fa-3x"></i><br>
    <span class="contato">(85) 99171-7122 <br></span>
    <span class="nome">&copy; 1999-2018 WildgaSports, Inc | By Willamy Silva</span>
  </footer>
</body>

</html>